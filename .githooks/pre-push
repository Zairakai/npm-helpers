#!/bin/bash
# Git pre-push hook for @zairakai/helpers
# Final checks before pushing to remote

set -e

echo "ğŸš€ Running pre-push checks for @zairakai/helpers..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to run command and check result
run_check() {
    local cmd="$1"
    local description="$2"

    echo -e "${BLUE}ğŸ”„ $description...${NC}"

    if eval "$cmd"; then
        echo -e "${GREEN}âœ… $description passed${NC}"
        return 0
    else
        echo -e "${RED}âŒ $description failed${NC}"
        return 1
    fi
}

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
    echo -e "${RED}âŒ Error: Not in a Node.js project directory${NC}"
    exit 1
fi

# Install dependencies if node_modules is missing
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}ğŸ“¦ Installing dependencies...${NC}"
    yarn install
fi

# 1. Full test suite
run_check "yarn test:coverage" "Full test suite with coverage"

# 2. Build verification
run_check "yarn build" "Production build verification"

# 3. Final lint check
run_check "yarn lint" "Final ESLint check"

# 4. Type checking
run_check "yarn type-check" "Final TypeScript check"

# 5. Format verification
run_check "yarn check" "Final format verification"

echo -e "${GREEN}ğŸ‰ All pre-push checks passed! Safe to push.${NC}"
