#!/bin/bash
# Git commit-msg hook for @zairakai/npm-vue-components
# Validates commit message format

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

commit_regex='^(feat|fix|docs|style|refactor|test|chore|build|ci|perf|revert)(\(.+\))?: .{1,72}'

# Read the commit message
commit_message=$(cat "$1")

# Check if commit message follows conventional commits format
if [[ ! $commit_message =~ $commit_regex ]]; then
    echo -e "${RED}❌ Invalid commit message format!${NC}"
    echo -e "${YELLOW}Expected format: type(scope): description${NC}"
    echo -e "${YELLOW}Types: feat, fix, docs, style, refactor, test, chore, build, ci, perf, revert${NC}"
    echo -e "${YELLOW}Example: feat(components): add new Button variant${NC}"
    echo -e "${YELLOW}Current message: $commit_message${NC}"
    exit 1
fi

# Check commit message length
if [[ ${#commit_message} -gt 72 ]]; then
    echo -e "${YELLOW}⚠️  Warning: Commit message is longer than 72 characters${NC}"
    echo -e "${YELLOW}Consider making it more concise: ${#commit_message} characters${NC}"
fi

echo -e "${GREEN}✅ Commit message format is valid${NC}"
