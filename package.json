{
    "name": "@zairakai/helpers",
    "version": "1.0.0",
    "description": "Collection of JavaScript utility functions for string manipulation, validation, and formatting",
    "keywords": [
        "javascript",
        "utilities",
        "helpers",
        "validation",
        "formatters",
        "laravel-like"
    ],
    "homepage": "https://gitlab.com/zairakai/npm/helpers",
    "bugs": {
        "email": "contact-project+zairakai-npm-helpers-issue-@incoming.gitlab.com"
    },
    "license": "MIT",
    "author": {
        "name": "Stanislas Poisson",
        "nickname": "Zairakai"
    },
    "files": [
        "src",
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        },
        "./validators": {
            "import": "./dist/validators.js",
            "require": "./dist/validators.cjs",
            "types": "./dist/validators.d.ts"
        },
        "./formatters": {
            "import": "./dist/formatters.js",
            "require": "./dist/formatters.cjs",
            "types": "./dist/formatters.d.ts"
        },
        "./datetime": {
            "import": "./dist/datetime.js",
            "require": "./dist/datetime.cjs",
            "types": "./dist/datetime.d.ts"
        }
    },
    "types": "./dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/zairakai/npm/helpers.git"
    },
    "scripts": {
        "build": "rollup -c",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "format": "prettier --write .",
        "check": "prettier --check .",
        "all": "npm run lint && npm run check",
        "all:fix": "npm run lint:fix && npm run format"
    },
    "dependencies": {
        "dayjs": "^1.11.13"
    },
    "devDependencies": {
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.4.2",
        "rollup": "^4.0.0",
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@rollup/plugin-typescript": "^12.0.0",
        "typescript": "^5.6.0",
        "@types/node": "^22.0.0",
        "vitest": "^2.0.0",
        "@vitest/coverage-v8": "^2.0.0",
        "tslib": "^2.8.0"
    },
    "type": "module"
}
