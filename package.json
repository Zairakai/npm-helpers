{
  "name": "@zairakai/helpers",
  "version": "1.0.0",
  "description": "Collection of JavaScript utility functions for string manipulation, validation, and formatting",
  "keywords": [
    "javascript",
    "utilities",
    "helpers",
    "validation",
    "formatters",
    "laravel-like"
  ],
  "homepage": "https://gitlab.com/zairakai/npm/helpers",
  "bugs": {
    "email": "contact-project+zairakai-npm-helpers-73530494-issue-@incoming.gitlab.com"
  },
  "license": "MIT",
  "author": {
    "name": "Stanislas Poisson",
    "nickname": "Zairakai"
  },
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./validators": {
      "import": "./dist/validators.js",
      "require": "./dist/validators.cjs",
      "types": "./dist/validators.d.ts"
    },
    "./formatters": {
      "import": "./dist/formatters.js",
      "require": "./dist/formatters.cjs",
      "types": "./dist/formatters.d.ts"
    },
    "./datetime": {
      "import": "./dist/datetime.js",
      "require": "./dist/datetime.cjs",
      "types": "./dist/datetime.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas.js",
      "require": "./dist/schemas.cjs",
      "types": "./dist/schemas.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/zairakai/npm/helpers.git"
  },
  "scripts": {
    "build": "tsc && rollup -c",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "all": "yarn lint && yarn check && yarn type-check && yarn test",
    "all:fix": "yarn lint:fix && yarn format",
    "hooks:install": ".githooks/install.sh",
    "hooks:uninstall": "git config --unset core.hooksPath && rm -f .git/hooks/pre-commit .git/hooks/commit-msg .git/hooks/pre-push",
    "postinstall": ".githooks/install.sh || true"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.10.3",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.3.0",
    "prettier": "^3.4.2",
    "rollup": "^4.0.0",
    "tslib": "^2.8.0",
    "typescript": "^5.7.2",
    "vitest": "^2.0.0"
  },
  "type": "module"
}
